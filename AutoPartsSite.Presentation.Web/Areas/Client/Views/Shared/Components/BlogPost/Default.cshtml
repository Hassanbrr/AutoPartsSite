@model IEnumerable<AutoPartsSite.Application.DTOs.BlogPostDto>

 
<div class="experts-slider-container container">
	<!-- عنوان بالای اسلایدر -->
	<div class="experts-slider-title text-right mb-4">
		<div><img src="~/client/images/users.svg"
		          style="background-color:#28EAC4; width:31px; border-radius:10px;"
		          alt="آیکون کارشناسان" />
			<span>   وبلاگ ها</span></div>
		
	</div>	
	 

	<!-- ساختار Swiper درون یک ردیف و ستون Bootstrap -->
	<div class="row">
		<div class="col-12">
			<div class="swiper experts-swiper blog-swiper">
				<div class="swiper-wrapper">
					@foreach (var post in Model)
					{
					 
							<div class="swiper-slide">


					 

									<div class="card blog-card shadow-sm rounded-4 overflow-hidden border-0">
										<div class="image-wrapper p-2">

											<!-- لایهٔ داخلی که هم‌اندازهٔ تصویر است -->
											<div class="image-inner position-relative">
												<img src="@post.FeaturedImage"
												     class="card-img-top rounded-4"
												     alt="blog">
												<div class="overlay">
													<img src="~/client/images/hover-image.svg"
													     class="overlay-icon"
													     alt="hover-icon"/>
												</div>
											</div>

										</div>
										<div class="card-body text-center">
											<h5 class="card-title fw-bold mb-2">@post.Title</h5>
											<p class="card-text text-muted small mb-3">@post.Summary</p>
											<div class="d-flex justify-content-between align-items-center text-muted small">
												<div class="d-flex align-items-center gap-1">
													<i class="bi bi-clock"></i>
													<span style="padding:5px 14px;border-radius:0px 10px 10px 10px; background-color:#2E39B4; color:white;">۱</span>
													<span style="color:#2E39B4;">دقیقه مطالعه</span>
												</div>
												<div class="d-flex align-items-center gap-1">
													<img src="~/client/images/comments.svg"/>
													<span>۱ دیدگاه</span>
												</div>
											</div>
										</div>
									</div>
								 
							</div>
						 

					}
					<!-- می‌توانید اسلایدهای بیشتری اضافه کنید -->
				</div>


			</div>
		</div>
	</div>
</div>
@section Scripts
{
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
	        integrity="sha384-ENjdO4Dr2bkBIFxQpeoPRh2FZEbN8mRl9E9syyZ+49jDVXsEzBhe0Eg74gBG0w+"
	        crossorigin="anonymous"></script>
	<!-- Swiper CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />

	<!-- Swiper JS -->
	<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>

	<script>
		document.addEventListener("DOMContentLoaded", function () {
		  const blogSwiper = new Swiper('.experts-swiper', {
			loop: true,
			freeMode: true,
			freeModeMomentum: false,
			speed: 5000,
			autoplay: {
			  delay: 0,
			  disableOnInteraction: false,
			},

			/* حالا به جای 'auto' از تعداد ثابت برای هر breakpoint استفاده می‌کنیم */
			slidesPerView:3,
			spaceBetween: 10,

			breakpoints: {
			  576: {
				slidesPerView: 1,
				spaceBetween: 15
			  },
			  768: {
				slidesPerView: 2,
				spaceBetween: 20
			  },
			  992: {
				slidesPerView: 2,
				spaceBetween: 30
			  }
			}
		  });
	 
  </script>

}
