@section Scripts {
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoPRh2FZEbN8mRl9E9syyZ+49jDVXsEzBhe0Eg74gBG0w+"
            crossorigin="anonymous"></script>

    <script>
    const expertsSwiper = new Swiper('.experts-swiper', {
        loop: true,                   // حلقهٔ بی‌نهایت (بدون توقف)
        
        /* ======= حالت Free Mode برای حرکت پیوسته ======= */
        freeMode: true,               // فعال کردن حالت آزاد
        freeModeMomentum: false,      // غیرفعال کردن مومنتوم ثانویه (تا پس از رسیدن به انتها مکث نکند)
        
        /* ======= Autoplay بدون وقفه ======= */
        speed:2500,                  // هرچه عدد بزرگ‌تر، حرکت آرام‌تر (به میلی‌ثانیه)
        autoplay: {
            delay: 0,                 // بلافاصله پس از هر اسلاید، اسلاید بعدی آغاز شود
            disableOnInteraction: false, // تعامل کاربر (کلیک یا لمس) اتوپلی را متوقف نکند
        },
        
        /* ======= اگر نمی‌خواهید کاربر بتواند لمس/کشیدن کند و حرکت را قطع کند: ======= */
        allowTouchMove: false,        // غیرفعال کردن درگ/لمس (تا اسلایدر هیچ‌وقت قطع نشود)
        
        /* ======= نمایش تعداد ثابت اسلایدها ======= */
        slidesPerView: 2,             // در موبایل هم دو اسلاید همزمان دیده شود
        spaceBetween: 20,             // فاصلهٔ پیش‌فرض (۲۰px) بین هر اسلاید
        
       
        
        /* ======= Breakpoints برای واکنش‌گرایی ======= */
        breakpoints: {
            576: {
                slidesPerView: 1,
                spaceBetween: 50
            },
            768: {
                slidesPerView: 3,
                spaceBetween: 24
            },
            992: {
                slidesPerView:3,
                spaceBetween: 30
            }
        }
    });
</script>




